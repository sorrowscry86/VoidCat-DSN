# Auto detect text files and normalize line endings to LF
* text=auto

# Shell scripts - always use LF
*.sh text eol=lf
*.bash text eol=lf

# Other script types
*.py text eol=lf
*.js text eol=lf
*.ts text eol=lf

# Docker files
Dockerfile* text eol=lf

# Git files
.gitattributes text eol=lf
.gitignore text eol=lf

# Windows batch/PowerShell - use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.zip binary
*.tar binary
*.gz binary
